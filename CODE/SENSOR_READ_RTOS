/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c2;

UART_HandleTypeDef huart1;

/* Definitions for SENSOR_READ_TAS */
osThreadId_t SENSOR_READ_TASHandle;
const osThreadAttr_t SENSOR_READ_TAS_attributes = {
  .name = "SENSOR_READ_TAS",
  .stack_size = 128 * 4,
  .priority = (osPriority_t) osPriorityNormal,
};
/* USER CODE BEGIN PV */
static const uint8_t TMP102_ADDR = 0X48 << 1;
static const uint8_t REG_TEMP;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C2_Init(void);
static void MX_USART1_UART_Init(void);
void SENSOR_READ_TASK(void *argument);

/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
float TEMP_READ(void){
	HAL_StatusTypeDef ret;
	uint8_t buf[12];
	int16_t val;
	float temp;

    // Tell TMP102 that we want to read from the temperature register
    buf[0] = REG_TEMP;
    ret = HAL_I2C_Master_Transmit(&hi2c2, TMP102_ADDR, buf, 1, HAL_MAX_DELAY);
    if ( ret != HAL_OK ) {
      strcpy((char*)buf, "Error Tx\r\n");
    } else {

      // Read 2 bytes from the temperature register
      ret = HAL_I2C_Master_Receive(&hi2c2, TMP102_ADDR, buf, 2, HAL_MAX_DELAY);
      if ( ret != HAL_OK ) {
        strcpy((char*)buf, "Error Rx\r\n");
      } else {

        //Combine the bytes
        val = ((int16_t)buf[0] << 4) | (buf[1] >> 4);

        // Convert to 2's complement, since temperature can be negative
        if ( val > 0x7FF ) {
          val |= 0xF000;
        }

        // Convert to float temperature value (Celsius)
        temp = val * 0.0625;

        // Convert temperature to decimal format
        temp *= 100;
        sprintf((char*)buf,
              "%u.%u C\r\n",
              ((unsigned int)temp / 100),
              ((unsigned int)temp % 100));
      }
    }

    // Send out buffer (temperature or error message)
    HAL_UART_Transmit(&huart1, buf, strlen((char*)buf), HAL_MAX_DELAY);

    // Wait
    HAL_Delay(500);
}
/* USER CODE END 0 */

